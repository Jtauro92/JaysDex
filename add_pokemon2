from database import dex,ability_list,type_list,attributes
from Pokemon import Pokemon

class Add_Pokemon(Pokemon):
    def __init__(self):
        super().__init__()
        self.new_pokemon = Pokemon()

    def set_Name(self):
        while True:
            np = Pokemon(input('Enter Pokemon Name: '))
            if np.name == '0':
                return
            if np.name == None:
                print('Invalid!')
            elif np.in_pokedex():
                print('Pokemon already exists!')
            else:
                return np.name
            
    def get_Number(self):
        while True:
            np = Pokemon(number= input('Enter Pokemon Number: '))
            if np.number == 0:
                return
            if np.number == None:
                print('Invalid!')
            elif np.in_pokedex():
                print('Pokemon already exists!')
            else:
                return np.number


if __name__ == "__main__":
    print(Add_Pokemon().get_Number())
