from database import dex,ability_list,type_list,attributes
from Pokemon import Pokemon

class Add_Pokemon(Pokemon):
    def __init__(self):
        super().__init__()
        self.new_pokemon = Pokemon()

    def set_Name(self):
        while True:
            pokemon = Pokemon(input('Enter Pokemon Name: '))
            if pokemon.name == '0':
                return
            if pokemon.name == None:
                print('Invalid Pokemon Name!')
            elif pokemon.in_pokedex():
                print('Pokemon already exists!')
            else:
                return pokemon.name


if __name__ == "__main__":
    print(Add_Pokemon().set_Name())
